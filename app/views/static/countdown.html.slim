sass:
	background: white
	.border
	  font-size: .9em
	  width: 175px
	  min-height: 30px
	  background: white
	  border: 1px solid #dddddd
	  border-bottom: 0
	  position: fixed
	  bottom: 0px
	  right: 0
	  left: 0
	  z-index: 400
	  border-top-right-radius: 4px
	  border-top-left-radius: 4px
	  border-bottom-right-radius: 0px
	  border-bottom-left-radius: 0px
		top: 50%
	  left: 50%
	  margin-top: -50px
	  margin-left: -100px
	.landing_image
	  width: 547px
	  margin: 0 auto
	.newlsetter
		width: 215px
		margin: 0 auto
.landing_page
	.landing_image = image_tag("jampoff_white.png")
	.newsletter
		h2= "Subscribe to our newsletter"
    	= render 'layouts/newsletter'
	.border
		h2.text-center
			= link_to "Login", new_user_session_path